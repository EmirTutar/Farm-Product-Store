<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="adminPane" prefHeight="700.0" snapToPixel="false" stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.AdminController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#open" text="Open csv" />
                  <MenuItem mnemonicParsing="false" onAction="#save" text="Save as csv" />
                  <MenuItem mnemonicParsing="false" onAction="#logOut" text="Logg ut" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <AnchorPane prefHeight="700.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableview" editable="true" minWidth="-Infinity" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0">
               <columns>

                  <TableColumn editable="false" maxWidth="52.6666259765625" minWidth="40.0" prefWidth="52.6666259765625" resizable="false" text="velg">
                     <cellValueFactory>
                        <PropertyValueFactory property="checkBox" />
                     </cellValueFactory>
                  </TableColumn>

                  <TableColumn fx:id="nrCol" maxWidth="150.0" minWidth="50.0" onEditCommit="#nrEdited" prefWidth="93.33334350585938" resizable="false" text="KomponentNr">
                     <cellValueFactory>
                        <PropertyValueFactory property="componentNr" />
                     </cellValueFactory>
                  </TableColumn>

                  <TableColumn maxWidth="300.0" minWidth="50.0" onEditCommit="#nameEdited" prefWidth="166.00006103515625" text="Komponent Navn">
                     <cellValueFactory>
                        <PropertyValueFactory property="componentName" />
                     </cellValueFactory>
                     <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn" />
                     </cellFactory>
                  </TableColumn>

                  <TableColumn fx:id="categoryCol" maxWidth="300.0" minWidth="50.0" onEditCommit="#categoryEdited" prefWidth="154.0" text="Kategory">
                     <cellValueFactory>
                        <PropertyValueFactory property="componentCategory" />
                     </cellValueFactory>
                     <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn" />
                     </cellFactory>
                  </TableColumn>

                  <TableColumn maxWidth="300.0" minWidth="-1.0" onEditCommit="#specsEdited" prefWidth="229.33331298828125" text="Spesifikasjoner">
                     <cellValueFactory>
                        <PropertyValueFactory property="componentSpecs" />
                     </cellValueFactory>
                     <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn" />
                     </cellFactory>
                  </TableColumn>

                  <TableColumn fx:id="prisCol" maxWidth="150.0" minWidth="-Infinity" onEditCommit="#priceEdited" prefWidth="97.9998779296875" resizable="false" text="Pris">
                     <cellValueFactory>
                        <PropertyValueFactory property="componentPrice" />
                     </cellValueFactory>
                  </TableColumn>

               </columns>
            </TableView>
            <TextField fx:id="txtFilter" layoutY="7.0" prefHeight="25.0" prefWidth="698.0" promptText="Filter / Search" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="164.0" AnchorPane.topAnchor="7.0" />
            <ComboBox fx:id="filterComboBox" layoutX="706.0" layoutY="7.0" prefWidth="150.0" styleClass="filterOptions" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="7.0" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </AnchorPane>
   </center>
   <left>
      <AnchorPane prefHeight="700.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="133.0" layoutY="21.0" text="Ny Komponent" textFill="black">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>

            <TextField fx:id="nr" layoutX="55.0" layoutY="60.0" prefHeight="25.0" prefWidth="300.0" promptText="Komponent Nummer">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="name" layoutX="55.0" layoutY="97.0" prefHeight="25.0" prefWidth="300.0" promptText="Navn">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="price" layoutX="55.0" layoutY="380.0" prefHeight="25.0" prefWidth="300.0" promptText="Pris">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextArea fx:id="specifications" layoutX="55.0" layoutY="172.0" prefHeight="200.0" prefWidth="300.0" promptText="Spesifikasjoner">
               <font>
                  <Font size="14.0" />
               </font></TextArea>
            <ComboBox fx:id="categoriesCombobox" layoutX="55.0" layoutY="135.0" prefHeight="30.0" prefWidth="300.0" />
            <Button layoutX="55.0" layoutY="418.0" mnemonicParsing="false" onAction="#createComponents" prefHeight="25.0" prefWidth="300.0" text="Opprett Komponent" />
            <Button layoutX="55.0" layoutY="452.0" mnemonicParsing="false" onAction="#delete" prefHeight="25.0" prefWidth="300.0" text="Slett" />
         </children>
      </AnchorPane>
   </left>
</BorderPane>
