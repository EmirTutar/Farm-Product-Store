<BorderPane fx:id="loginPane" minHeight="359.0" minWidth="500.0" prefHeight="406.0" prefWidth="585.0" stylesheets="@loginViewStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.controllers.LoginController">
   <center>
      <VBox fx:id="loginVbox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="117.0" text="LOG IN" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtUsername" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="240.0" promptText="Username">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="txtPassword" maxWidth="-Infinity" minWidth="-Infinity" onAction="#loggInn" onDragEntered="#loggInn" prefHeight="25.0" prefWidth="240.0" promptText="Password">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="loginButton" layoutX="212.0" layoutY="281.0" mnemonicParsing="false" onAction="#loggInn" prefHeight="25.0" prefWidth="175.0" text="Log in">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
